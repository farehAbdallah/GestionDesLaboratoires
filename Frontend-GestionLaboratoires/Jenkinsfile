pipeline {
    agent any

    environment {
        NODE_HOME = "${tool 'NodeJS'}" // Adjust 'NodeJS-20' to match your Jenkins NodeJS tool configuration name
        PATH = "${NODE_HOME}/bin:${env.PATH}" // Ensure Node.js is in the PATH
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning the repository..."
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
                bat '''
                    node -v
                    npm install
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo "Running tests with Jest..."
                bat 'npm run test -- --watch=false'
            }
        }

        stage('Build Application') {
            steps {
                echo "Building the Angular application..."
                bat 'npm run build -- --configuration=production'
            }
        }

        stage('Archive Build') {
            steps {
                echo "Archiving build artifacts..."
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }

        stage('Deploy') {
            when {
                branch 'main' // Only deploy from the main branch
            }
            steps {
                echo "Deploying the Angular application..."
                // Replace with your actual deployment steps
                bat 'echo "Deployment step here"'
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
        success {
            echo "Pipeline executed successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
