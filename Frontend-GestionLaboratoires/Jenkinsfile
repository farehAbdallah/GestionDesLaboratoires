pipeline {
    agent any

    environment {
        NODE_VERSION = '20.11.1' // Adjust Node.js version to match your project requirements
    }

    stages {
        stage('Checkout') {
            steps {
                echo "Cloning the repository..."
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                echo "Installing dependencies..."
                sh '''
                    # Ensure Node.js is installed and available
                    nvm use $NODE_VERSION || nvm install $NODE_VERSION
                    node -v
                    npm install
                '''
            }
        }

        stage('Run Tests') {
            steps {
                echo "Running tests with Jest..."
                sh 'npm run test -- --watch=false'
            }
        }

        stage('Build Application') {
            steps {
                echo "Building the Angular application..."
                sh 'npm run build -- --configuration=production'
            }
        }

        stage('Archive Build') {
            steps {
                echo "Archiving build artifacts..."
                archiveArtifacts artifacts: 'dist/**', fingerprint: true
            }
        }

        stage('Deploy') {
            when {
                branch 'main' // Only deploy from the main branch
            }
            steps {
                echo "Deploying the Angular application..."
                // Replace with your actual deployment steps (e.g., FTP, AWS S3, etc.)
                sh 'echo "Deployment step here"'
            }
        }
    }

    post {
        always {
            echo "Pipeline completed."
        }
        success {
            echo "Pipeline executed successfully."
        }
        failure {
            echo "Pipeline failed."
        }
    }
}
