pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven 3.8.4' // Remplacez par le nom de l'outil Maven configuré dans Jenkins
    }

    stages {
        stage('Configure Git Buffer') {
            steps {
                bat 'git config --global http.postBuffer 524288000' // Commande adaptée pour Windows
            }
        }
        stage('Checkout') {
            steps {
                // Cloner le repository depuis GitHub
                git 'https://github.com/farehAbdallah/GestionDesLaboratoires.git' // Remplacez par l'URL de votre repository GitHub
            }
        }

        stage('Build') {
            steps {
                // Nettoyer et construire UtilisateurService avec Maven
                dir('UtilisateurService') {
                    sh "${MAVEN_HOME}/bin/mvn clean install"
                }
            }
        }

        stage('Test') {
            steps {
                // Exécuter les tests pour UtilisateurService
                dir('UtilisateurService') {
                    sh "${MAVEN_HOME}/bin/mvn test"
                }
            }

            post {
                always {
                    // Publier les rapports de tests
                    junit 'UtilisateurService/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                // Packager l'application (si nécessaire)
                dir('UtilisateurService') {
                    sh "${MAVEN_HOME}/bin/mvn package"
                }
            }
        }
    }

    post {
        success {
            echo 'Le pipeline a été exécuté avec succès pour UtilisateurService !'
        }
        failure {
            echo 'Le pipeline pour UtilisateurService a échoué.'
        }
    }
}
