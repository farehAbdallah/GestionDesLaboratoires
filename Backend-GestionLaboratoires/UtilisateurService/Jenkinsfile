pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven' 
    }

    stages {
        stage('Checkout') {
            steps {
                // Cloner le code complet du repository multi-module
                git url: 'https://github.com/farehAbdallah/GestionDesLaboratoires.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                // Exécuter Maven depuis la racine pour accéder au pom.xml principal
                dir('UtilisateurService') {
                    bat "${MAVEN_HOME}\\bin\\mvn -f ../pom.xml clean install"
                }
            }
        }

        stage('Test') {
            steps {
                dir('UtilisateurService') {
                    bat "${MAVEN_HOME}\\bin\\mvn -f ../pom.xml test"
                }
            }
            post {
                always {
                    junit 'UtilisateurService/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                dir('UtilisateurService') {
                    bat "${MAVEN_HOME}\\bin\\mvn -f ../pom.xml package"
                }
            }
        }
    }

    post {
        success {
            echo 'Le pipeline pour UtilisateurService a été exécuté avec succès !'
        }
        failure {
            echo 'Le pipeline pour UtilisateurService a échoué.'
        }
    }
}
