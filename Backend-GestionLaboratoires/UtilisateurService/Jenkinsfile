pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven'  // Nom de l'outil Maven configuré dans Jenkins
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone le dépôt complet depuis GitHub
                git url: 'https://github.com/farehAbdallah/GestionDesLaboratoires.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                // Exécute la commande Maven depuis le pom.xml principal du projet multi-module
                bat "${MAVEN_HOME}\\bin\\mvn -f Backend-GestionLaboratoires/pom.xml -pl UtilisateurService -am clean install"
            }
        }

        stage('Test') {
            steps {
                // Exécute les tests pour UtilisateurService en utilisant le pom.xml principal
                bat "${MAVEN_HOME}\\bin\\mvn -f Backend-GestionLaboratoires/pom.xml -pl UtilisateurService -am test"
            }
            post {
                always {
                    // Publie les rapports de tests générés pour UtilisateurService
                    junit 'UtilisateurService/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                // Package l'application pour UtilisateurService en utilisant le pom.xml principal
                bat "${MAVEN_HOME}\\bin\\mvn -f Backend-GestionLaboratoires/pom.xml -pl UtilisateurService -am package"
            }
        }
    }

    post {
        success {
            echo 'Le pipeline pour UtilisateurService a été exécuté avec succès !'
        }
        failure {
            echo 'Le pipeline pour UtilisateurService a échoué.'
        }
    }
}