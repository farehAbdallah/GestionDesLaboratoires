pipeline {
    agent any

    environment {
        MAVEN_HOME = tool name: 'Maven'
    }

    stages {
        stage('Checkout') {
            steps {
                // Clone le code complet du repository multi-module
                git url: 'https://github.com/farehAbdallah/GestionDesLaboratoires.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                // Utilise -pl avec -am pour s'assurer que les dépendances sont construites
                bat "${MAVEN_HOME}\\bin\\mvn -pl UtilisateurService -am clean install"
            }
        }

        stage('Test') {
            steps {
                // Exécute les tests pour UtilisateurService depuis la racine
                bat "${MAVEN_HOME}\\bin\\mvn -pl UtilisateurService -am test"
            }
            post {
                always {
                    // Publie les rapports de tests générés pour UtilisateurService
                    junit 'UtilisateurService/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                // Package l'application pour UtilisateurService depuis la racine
                bat "${MAVEN_HOME}\\bin\\mvn -pl UtilisateurService -am package"
            }
        }
    }

    post {
        success {
            echo 'Le pipeline pour UtilisateurService a été exécuté avec succès !'
        }
        failure {
            echo 'Le pipeline pour UtilisateurService a échoué.'
        }
    }
}
