pipeline {
    agent any

    environment {
        // Spécifiez ici le nom exact de l'installation Maven configurée dans Jenkins
        MAVEN_HOME = tool name: 'Maven' 
    }

    stages {
        stage('Checkout') {
            steps {
                // Cloner le code depuis le repository GitHub
                git url: 'https://github.com/farehAbdallah/GestionDesLaboratoires.git', branch: 'main'
            }
        }

        stage('Build') {
            steps {
                // Exécuter Maven pour construire UtilisateurService
                dir('UtilisateurService') {
                    // Utilisez bat pour Windows
                    bat "${MAVEN_HOME}\\bin\\mvn clean install"
                }
            }
        }

        stage('Test') {
            steps {
                // Exécuter les tests pour UtilisateurService
                dir('UtilisateurService') {
                    bat "${MAVEN_HOME}\\bin\\mvn test"
                }
            }

            post {
                always {
                    // Publier les rapports de tests
                    junit 'UtilisateurService/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Package') {
            steps {
                // Packager l'application (si nécessaire)
                dir('UtilisateurService') {
                    bat "${MAVEN_HOME}\\bin\\mvn package"
                }
            }
        }
    }

    post {
        success {
            echo 'Le pipeline pour UtilisateurService a été exécuté avec succès !'
        }
        failure {
            echo 'Le pipeline pour UtilisateurService a échoué.'
        }
    }
}
